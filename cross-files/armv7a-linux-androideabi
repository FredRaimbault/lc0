
# Tested with Android NDK r14b, standalone toolchain
# Targeting API level 16
#
# ./make-standalone-toolchain.sh --arch=arm --platform=android-16 --stl=libc++ --install-dir=android-standalone-32
# Had build issues targeting API level 16 on newer NDK's

# Set the toolchain path on your environment
# export PATH="$HOME/.local/share/android-sdk/ndk-bundle/android-standalone-32/bin:$PATH"

[host_machine]
system = 'android'
cpu_family = 'arm'
cpu = 'armv7a'
endian = 'little'

[properties]
needs_exe_wrapper = true
cpp_args = ['-Dandroid']
cpp_link_args = ['-llog', '-static-libstdc++']

[binaries]
c = 'arm-linux-androideabi-clang'
cpp = 'arm-linux-androideabi-clang++'
ar = 'arm-linux-androideabi-ar'
strip = 'arm-linux-androideabi-strip'
ld = 'arm-linux-androideabi-ld'
ranlib = 'arm-linux-androideabi-ranlib'
as = 'arm-linux-androideabi-as'
