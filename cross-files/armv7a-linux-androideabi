
# Tested with Android NDK r13b, standalone toolchain
# Targeting API level 16
#
# ./make-standalone-toolchain.sh --arch=arm --platform=android-16 --stl=libc++ --install-dir=android-standalone-32
# Had build issues targeting API level 16 on newer NDK's

# Set the toolchain path on your environment
# export PATH="$HOME/.local/share/android-sdk/ndk-bundle/android-standalone-32/bin:$HOME/.local/share/android-sdk/ndk-bundle/android-standalone-32/arm-linux-androideabi/bin/:$PATH"

[host_machine]
system = 'android'
cpu_family = 'arm'
cpu = 'armv7a'
endian = 'little'

[properties]
needs_exe_wrapper = true
cpp_args = []
cpp_link_args = ['-llog', '-static-libstdc++']

[binaries]
c = 'arm-linux-androideabi-clang'
cpp = 'arm-linux-androideabi-clang++'
ar = 'ar'
strip = 'strip'
ld = 'ld'
ranlib = 'ranlib'
as = 'as'

